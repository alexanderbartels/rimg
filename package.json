{
  "name": "rimg-cli",
  "version": "0.0.0-development",
  "description": "responsive-image generator",
  "main": "index.js",
  "bin": {
    "rimg": "./build/src/rimg.js"
  },
  "scripts": {
    "docs:serve": "docsify serve ./docs",
    "commit": "git-cz",
    "test:unit": "nyc mocha -r ts-node/register --require source-map-support/register --recursive \"src/**/*.spec.ts\"",
    "test:adr": "mocha -r ts-node/register --require source-map-support/register --recursive test/adr/*.spec.ts",
    "test": "npm run test:unit && npm run test:adr",
    "lint": "tslint -c tslint.json \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "compile": "tsc -p .",
    "build": "npm run compile && pkg build/src/rimg.js --targets latest --out-path target",
    "build:all": "npm run compile && pkg build/src/rimg.js --targets node8-linux,node8-macos,node8-win --out-path target",
    "prepare": "npm run build",
    "pretest2": "npm run build",
    "posttest2": "npm run check",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexanderbartels/rimg.git"
  },
  "keywords": [
    "responsive",
    "images",
    "srcset",
    "picture"
  ],
  "author": "Alexander Bartels <bartels.xander@gmail.com> (http://www.alexanderbartels.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/alexanderbartels/rimg/issues"
  },
  "homepage": "https://github.com/alexanderbartels/rimg",
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.1.1",
    "@types/sinon": "^4.3.3",
    "@types/svgo": "^1.0.1",
    "@types/yargs": "^11.0.0",
    "chai": "^4.1.2",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "docsify-cli": "^4.2.1",
    "mocha": "^5.1.1",
    "nyc": "^11.8.0",
    "pkg": "^4.3.1",
    "semantic-release": "^15.4.1",
    "sinon": "^5.0.7",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "@types/globby": "^6.1.0",
    "globby": "^8.0.1",
    "image-size": "^0.6.2",
    "mkdir-recursive": "^0.4.0",
    "sqip": "^0.3.3",
    "svgo": "^1.0.5",
    "tinify": "^1.5.0",
    "yargs": "^11.0.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*",
      "**/*.spec.ts",
      "!src/**/*.ts"
    ],
    "reporter": [
      "lcovonly",
      "text"
    ],
    "all": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "publish": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/github",
        "assets": [
          "target/*"
        ]
      }
    ]
  }
}
